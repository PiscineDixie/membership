<div class="row">
  <div class="col-sm-8 col-lg-5">

<%= form_for(@produit) do |f| %>

    <% unless @produit.errors.full_messages.empty? %>
    <div class="alert alert-danger">
      <%  @produit.errors.full_messages.each do |msg| %>
      <p>
        <%= msg %>
      </p>
      <% end %>
    </div>
    <% end %>

  <div class="form-group">
    <label>Titre (FR)</label>
    <div><%= f.text_field :titre_fr, readonly: readonly, class:'form-control' %></div>
  </div>
  
  <div class="form-group">
    <label>Titre (EN)</label>
    <div><%= f.text_field :titre_en,  readonly: readonly, class:'form-control' %></div>
  </div>
  
  <div>
    <label>Description (FR)</label>
    <div><%= f.text_area :description_fr, cols: 40, rows: 3, readonly: readonly, class:'form-control' %></div>
  </div>
  
  <div class="form-group">
    <label>Description (EN)</label>
    <div><%= f.text_area :description_en, cols: 40, rows: 3, readonly: readonly, class:'form-control' %></div>
  </div>
  
  <div class="form-group">
    <label>Tailles (liste avec virgules)</label>
      <div><%= f.text_field :tailles_fr, readonly: readonly, class:'form-control' %></div>
  </div>

    <div class="form-group">
    <label>Images (liste avec virgules)</label>
      <div><%= f.text_field :images, readonly: readonly, class:'form-control' %></div>
  </div>

    <div class="form-group">
    <label>Prix</label>
      <div><%= f.text_field :prix,  readonly: readonly, class:'form-control' %></div>
  </div>

<% unless readonly %>
    <%= f.submit button_name, :class => "btn btn-primary" %>
    <%= f.submit( 'Annuler', {name: 'cancel', class: "btn btn-default"}) %>
<% end %>
    
<% end %>

  </div>
</div>