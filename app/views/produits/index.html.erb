<h1>Listes des produits</h1>

  <nav class="navbar navbar-default">
    <ul class="nav navbar-nav">
     <li><%= button_to('Ajouter un produit', new_produit_path, {method: :get, class: "btn btn-default navbar-btn"}) %></li>
   </ul>
  </nav>
        

<table class="table table-hover">
  <thead>
  <tr>
    <th></td>
    <th>Titre</th>
    <th>Prix</th>
  </tr>
  </thead>
  <tbody>
<% idx = 1 %>
<% for produit in @produits %>
  <tr>
    <td><%= idx.to_s %></td>
    <td><%= link_to produit.titre_fr, produit %></td>
    <td><%=h number_with_precision(produit.prix, :precision => 2) %></td>
    <td></td>
    <td><%= button_to('Enlever', produit, {data: {confirm: 'Etes vous certain?'}, :method => :delete, class: "btn btn-danger btn-xs"}) %></td>
  </tr>
  <% idx = idx + 1 %>
<% end %>
</tbody>
</table>

