<h1>Rapport des familles sans courriel</h1>

<table>
  <thead>
    <tr>
      <th>Famille</th><th>Etat</th><th>Tel</th><th colspan="4">Adresse</th>
    </tr>
  </thead>
  <tbody>
    <% @familles.each do | famille | %>
      <% if famille.courriels.empty? %>
        <tr class="<%= cycle('odd', 'even') %>">
          <td><%= link_to famille.nom, famille %></td>
          <td><%= famille.etat %></td>
          <td><%= number_to_phone(famille.tel_soir) %></td>
          <td><%= famille.adresse1 %></td>
          <td><%= famille.adresse2 %></td>
          <td><%= famille.ville %></td>
          <td><%= famille.code_postal %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
